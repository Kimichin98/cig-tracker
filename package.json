{
  "name": "cig-tracker",
  "productName": "Cigarette Tracker",
  "version": "0.1.0",
  "description": "Minimal Electron app to log cigarette light/put-out events to a local text file",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.cigtracker",
    "productName": "Cigarette Tracker",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "electron-log": "^4.4.8"
  },
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3"
  }
}