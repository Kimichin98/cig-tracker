{
"name": "cig-logger",
"productName": "Cigarette Logger",
"version": "0.1.0",
"description": "Minimal Electron app to log cigarette light/put-out events to a local text file",
"main": "main.js",
"scripts": {
"start": "electron .",
"pack": "electron-builder --dir",
"dist": "electron-builder"
},
"build": {
"appId": "com.yourname.ciglogger",
"productName": "Cigarette Logger",
"files": [
"**/*"
],
"directories": {
"buildResources": "assets"
},
"win": {
"target": ["nsis"]
}
},
"dependencies": {
"electron-log": "^4.4.7"
},
"devDependencies": {
"electron": "^26.0.0",
"electron-builder": "^24.6.0"
}
}